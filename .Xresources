;=== ROFI ====
rofi.modi:           window, run
rofi.lines:          12
rofi.font:           pango:System San Francisco Display 14
rofi.opacity:        80
rofi.case-sensitive: false
rofi.bc:             #f0f1f2
rofi.bw:             1
rofi.location:       2
rofi.sidebar-mode:   true
rofi.hide-scrollbar: false

;## COLORS ########  <Normal> <FONT>   <ALT>    <BG_S>   <FONT_S>
rofi.color-window:   #111133, #ffffff
rofi.color-normal:   #111133, #ffffff, #222244, #11aa11, #000000
rofi.color-urgent:   #cc2222, #ffffff, #dd3333, #ee0000, #000000
rofi.color-active:   #101077, #ffffff, #212188, #00dd00, #000000


;=== URXVT ====
URxvt.font:          xft:monospace:size=12
URxvt.letterSpace:   -1
URxvt.scrollBar:     false

